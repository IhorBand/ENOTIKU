<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-validate")
    @Scripts.Render("~/bundles/jquery-cookie")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/main")

    @RenderSection("headContent", false)
</head>
<body>
    <div class="body-wrapper">
        <div class="header text-for-black-background">
            <div class="navigation-bar">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")" class="logo">KIN<i class="fa fa-circle"></i>TIKI</a>
                </div>
                @*<div class="navigation-menu">
                    <ul>
                        <li class="menu-btn">
                            <a href="#">Movies</a>
                            <ul>
                                <li class="menu-btn"><a href="#">Action</a></li>
                                <li class="menu-btn"><a href="#">Comedy</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>*@
            </div>
        </div>

        <div class="body-container">
            <div class="content">
                    @RenderBody()
            </div>
            <div class="side-menu">
                <div class="box-menu box-large">
                    <div class="box-account-content">
                        @{ 
                            if (User.Identity.IsAuthenticated)
                            {
                                Html.RenderAction("GetInformationSideMenuBox", "Account");
                            }
                            else
                            {
                                Html.RenderAction("LoginPartial", "Account");
                            }
                        }
                    </div>    
                </div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="footer-item">
            <p>igor.bandura.3@gmail.com</p>
        </div>
        <div class="footer-item social-links">
            <a href="#" class="fa fa-facebook social-link"></a>
            <a href="#" class="fa fa-google social-link"></a>
            <a href="#" class="fa fa-twitter social-link"></a>
            <a href="#" class="fa fa-youtube social-link"></a>
        </div>
        <div class="footer-item">
            <a href="#">Help us</a>
        </div>
    </div>
</body>
</html>
